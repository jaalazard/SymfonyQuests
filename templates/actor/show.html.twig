{% extends 'base.html.twig' %}

{% block title %}Acteurs{% endblock %}

{% block body %}
    <h1>Acteur : {{ actor.name }}</h1>
    <h2>Programmes associés à cet acteur :</h2>
    <ul>
     {% for program in actor.programs %}
        <li><a href="{{ path('program_show', { 'id': program.id }) }}">{{ program.title }}</a></li>
    {% endfor %}
    </ul>
{% endblock %}
