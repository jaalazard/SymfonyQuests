{% extends 'base.html.twig' %}

{% block title %}Wild Series
{% endblock %}

{% block body %}
	<div class="bg-warning container-fluid w-100">
		<h1 class="text-center" {{ stimulus_controller('symfony/ux-typed', { strings: ['Bienvenue sur Wild-Series !',
		 'Le meilleur site pour suivre tes séries préférées !!',
		  'Découvre les dernières actus sur les séries du moment!!!'] } ) }}>Bienvenue sur la page d'accueil du site</h1>
	</div>

	<section class="row">
		{% for programs in program %}
			<div class="card bg-danger" style="width: 18rem;">
				<div class="card-body">
					<h5 class="card-title">{{ programs.title }}</h5>
					<p class="card-text">{{ programs.synopsis }}</p>
					<a class="btn" href="{{ path("program_show", { slug: programs.slug }) }}">Voir</a>
				</div>
			</div>
		{% endfor %}
	</section>

	{{ component ('last_episode') }}
{% endblock %}
